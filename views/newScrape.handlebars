{{#each results}}
<div id="article" class="card horizontal">
    <div class="card-image">
        <img src={{img}} alt="article picture" id="artPic">
    </div>
    <div class="card-stacked">
        <div class="card-content">
            <h4> <a href="{{url}}">{{title}}</a> </h2>
                <div>{{author}}</div>
                <h6>
                    <div id="artDate">{{pubDate}}</div>
                </h6>
                <div id="artBlurb">{{blurb}}</div>
                <div id="artComCount" class="right">{{comments.length}} Comments </div>
        </div>
        <div class="card-action">
            <ul class="collapsible" data-collapsible="expandable">
                <li>
                    <div class="collapsible-header">
                        <a id="expand">Expand</a>
                    </div>
                    <div class="collapsible-body">
                        {{#each comments}}
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                                <div class="card-title">{{body}}</div>
                                <div>{{user}}</div>
                                <div>{{date}}</div>
                            </div>
                            <div class="card-action right-align">
                                <form action="/delete" method="POST">
                                    <input type="hidden" name="commentId" value={{id}}>
                                    <input type="hidden" name="articleId" value={{../id}}>
                                    <button type="submit" class="btn red">Delete</button>
                                </form>
                            </div>
                        </div>
                        {{/each}}
                        <form action="/postComment" method="POST">

                            <input type="hidden" name="articleId" value={{id}}>
                            <div class="input-field">
                                <input type="text" name="username" id="username">
                                <label for="username">Name</label>
                            </div>
                            <div class="input-field">
                                <input type="text" name="body" id="body">
                                <label for="body">Comment</label>
                            </div>
                            <div class="right-align">
                                <button type="submit" class="btn">submit</button>
                            </div>
                        </form>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
{{/each}}